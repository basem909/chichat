<% if @show_room && @show_room.participant?(@show_room, user) %>
<% isActive = 'active' %>
<% else %>
<% isActive = '' %>
<% end %>

<li class="flex gap-5 items-center mt-5 w-full <%= isActive %>">
  <div class="icon-container"><%= link_to(image_tag(user.chat_avatar, class: 'rounded-full w-[50px] h-[50px]'), user, class: '') %>
  <%= turbo_stream_from 'user_status' %>
<div>
  <%= render 'users/status', user: user %>
</div></div>
  <%= link_to user.name, user, class: ' font-semilight hover:text-gray-700', data: {turbo: 'false'} %>
</li>