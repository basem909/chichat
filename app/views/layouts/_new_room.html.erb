<%= form_with(model: @room, remote: true, class: 'flex flex-col lg:flex-row gap-1 pt-5 pr-2', data: { controller: 'reset-form', action: 'turbo:submit-end->reset-form#reset'}) do |f| %>
<%= f.text_field :name, class: 'rounded-md p-1 text-[#3B7B9A] ', autocomplete: 'off' %>
<%= f.submit data: { disable_with: false }, class: 'border-2 border-[#a5def1] py-1 px-1 bg-[#3B7B9A] rounded-md cursor-pointer' %>
<% end %>