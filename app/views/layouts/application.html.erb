<!DOCTYPE html>
<html>
  <head>
    <title>Chichat</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <%= csrf_meta_tags %> <%= csp_meta_tag %> <%=
    stylesheet_link_tag"application", "data-turbo-track": "reload" %> <%=
    javascript_importmap_tags %>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@300;400;500;700&display=swap"
      rel="stylesheet"
    />
    <style>
      <%= ".msg-#{current_user&.id}" %> {
        background-color: #2EB5E0 !important;
        color: white !important;
        align-self: end !important;        
      }
    </style>
  </head>

  <body>
   <div class = 'fixed w-full h-[70px] flex justify-between items-center px-4 bg-[#0C6980] text-gray-100 shadow-md'>
      <div class="flex gap-5">
        <%= image_tag(current_user.avatar_thumbnail, class: 'rounded-full w-[60px] h-[60px]') if current_user %>
      </div>
     <div class='flex gap-4'>
         <% if current_user %>
           <div ><%= link_to 'account settings', edit_user_registration_path, class: 'font-normal text-sm sm:text-md pr-10' %></div>
           <div class='font-normal text-sm sm:text-md  pr-10'> <%= button_to "log out", destroy_user_session_path, method: :delete %> </div>
         <% else %>
           <div class='font-normal text-sm sm:text-md  pr-10'> <%= button_to "Login",  new_user_session_path, method: :get %></div>
         <% end %>
         </div>
    </div>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
